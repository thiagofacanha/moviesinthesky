<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.sandclan.moviesinthesky.view.activity.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_detail_poster"
            android:layout_width="match_parent"
            android:contentDescription="@string/movie_poster"
            android:layout_height="@dimen/detail_screen_poster_width" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_rate_layout_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate"
                android:textColor="@android:color/white"
                android:textSize="@dimen/detail_rate_text_size" />

            <TextView
                android:id="@+id/textview_detail_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_rate_value_margin_start"
                android:layout_marginStart="@dimen/detail_rate_value_margin_start"
                android:textColor="@android:color/white"
                android:textSize="@dimen/detail_rate_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_rate_layout_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_original_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/detail_original_title_text_size" />

            <TextView
                android:id="@+id/textview_original_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_rate_value_margin_start"
                android:layout_marginStart="@dimen/detail_rate_value_margin_start"
                android:textColor="@android:color/white"
                android:textSize="@dimen/detail_original_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_rate_layout_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_release_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release_date"
                android:textColor="@android:color/white"
                android:textSize="@dimen/detail_original_title_text_size" />

            <TextView
                android:id="@+id/textview_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_rate_value_margin_start"
                android:layout_marginStart="@dimen/detail_rate_value_margin_start"
                android:textColor="@android:color/white"
                android:textSize="@dimen/detail_original_title_text_size" />
        </LinearLayout>


        <TextView
            android:id="@+id/textview_trailer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trailer"
            android:textColor="@android:color/white"
            android:textSize="@dimen/detail_original_title_text_size" />

        <ImageView
            android:id="@+id/imageview_trailer"
            android:layout_width="@dimen/trailer_icon_width"
            android:layout_height="@dimen/trailer_icon_height"
            android:layout_gravity="center_horizontal"
            android:onClick="callYoutube"
            android:contentDescription="@string/trailer_icon"
            android:src="@drawable/image_not_found" />

        <TextView
            android:id="@+id/textview_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_summary_text_margin_top"
            android:textColor="@android:color/white"
            android:textSize="@dimen/detail_summary_text_size" />
    </LinearLayout>
</ScrollView>
